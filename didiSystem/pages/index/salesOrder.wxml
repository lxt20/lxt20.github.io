<!--pages/index/salesOrder.wxml-->
<view class="content-box">
  <view class="content-cusName">
    {{name}}
  </view>
  <view class="content-search">
    <view>销售单号：</view>
    <view class="search-box">
      <input type="text" value="{{keyword}}" placeholder="请扫码单号或者手动输入" placeholder-class="input-box" bindconfirm="getConfirm" bindinput="getInput" />
      <image src="../icon/search.png" bindtap="searchClick"></image>
    </view>
  </view>
  <view class="content-list">
    <checkbox-group bindchange="getCheck">
      <view class="content-item" wx:for="{{orderList}}" wx:key="index">
        <view class="content-check">
          <checkbox value="{{item.orderid}}" checked="{{item.checked}}" ></checkbox>
        </view>
        <view class="content-detail">
          <view class="content-detail-li">销售单号：{{item.orderid}}</view>
          <view class="content-detail-li">出库日期：{{item.orderdate}}</view>
          <view class="content-detail-li"><text>应收金额：{{item.ysMoney}}元</text><text style="margin-left:15px">抹零：{{item.ml}}元</text></view>
          <view class="content-detail-li">本次收款：{{item.ssMoney}}元</view>
        </view>
      </view>
    </checkbox-group>
  </view>

  <view style="width:100%;height:50px;"></view>
  <view class="bottom-box">
    <view class="bottom-view btn1" bindtap="allSelectBtn">全选</view>
    <view class="bottom-view btn2" bindtap="waitBtn">
      放入待算结
      <view class="btn2-money" wx:if="{{totalMoney!=0}}">￥{{totalMoney}}</view>
    </view>
    <view class="bottom-view btn3" bindtap="gotoHistory">上欠历史</view>
  </view>
</view>
