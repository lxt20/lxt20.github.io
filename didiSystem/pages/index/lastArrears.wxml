<!--pages/index/lastArrears.wxml-->
<view class="content-box">
  <view class="content-cusName">
    <input type="text" placeholder="请输入客户关键字搜索" value="{{keyword}}" placeholder-class="input-box" bindinput="getInput" bindconfirm="getConfirm" />
    <image src="../icon/search.png" bindtap="searchClick" ></image>
  </view>
  <view class="content-search">
    时间
    <picker mode="date" value="{{startdate}}" bindchange="bindstartDateChange">
      <view class="picker">
        {{startdate}}
      </view>
    </picker>
    至
    <picker mode="date" value="{{enddate}}" bindchange="bindendDateChange">
      <view class="picker">
        {{enddate}}
      </view>
    </picker>
    <view class="search-btn">搜索
      <image src="../icon/search.png"></image>
    </view>
  </view>
  <view class="content-search-btn">
    <view class="search-btn-date">一周内</view>
    <view class="search-btn-date">一个月内</view>
    <view class="search-btn-date">三个月内</view>
  </view>

  <view class="content-list">
    <checkbox-group bindchange="getCheck">
      <view class="content-item" wx:for="{{orderList}}" wx:key="index">
        <view class="content-check">
          <checkbox value="{{item.orderid}}" checked="{{item.checked}}" ></checkbox>
        </view>
        <view class="content-detail">
          <view class="content-detail-li text-box">销售单号：{{item.orderid}}</view>
          <view class="content-item-li">
            <image src="../icon/shop.png" class="shop-icon"></image> 
            <text>{{item.shopName}}</text>
          </view>
          <view class="content-item-li">
            <image src="../icon/address.png" class="address-icon"></image>
            <text>{{item.address}}</text>
          </view>
          <view class="content-detail-li text-box">出库日期：{{item.orderdate}}元</view>
          <view class="content-detail-li text-box"><text>应收金额：{{item.ysMoney}}元</text><text>抹零：{{item.ml}}元</text></view>
          <view class="content-detail-li text-box">本次收款：{{item.ssMoney}}元</view>
        </view>
      </view>
    </checkbox-group>
  </view>

  <view style="width:100%;height:50px;"></view>
  <view class="bottom-box">
    <view class="bottom-view btn1" bindtap="allSelectBtn">全选</view>
    <view class="bottom-view btn2" bindtap="waitBtn">
      放入待算结
      <view class="btn2-money" wx:if="{{totalMoney!=0}}">￥{{totalMoney}}</view>
    </view>
  </view>
</view>
