/* pages/index/personal.wxss */
.content-box{width: 100%;display: flex;flex-direction: column;box-sizing: border-box;align-items: center;}
.content-head{width: 100%;position: fixed;top: 0;left: 0;z-index:50;display: flex;flex-direction:column;align-items: center;background-color: #fff;}
.content-search2{width: 80%;display: flex;flex-direction: row;align-items: center;border: 1px solid #b8b8b8;box-sizing: border-box;justify-content: space-between;border-radius: 4px;height: 30px;margin-top: 15px;padding: 0 15px;}
.input-box{font-size: 13px;color: rgb(185, 185, 185);}
.content-head image{width: 20px;height: 20px;}
.content-search{display: flex;flex-direction: row;align-items: center;padding:0 15px;box-sizing: border-box;font-size: 15px;color: #333;margin-top: 15px;}
.content-search picker{margin-left: 5px;font-size: 14px;margin-right: 5px;color: #333;border: 1px solid #eee;border-radius: 4px;width: 110px;text-align: center;}
.search-btn{border-radius: 4px;border: 1px solid #999;padding: 3px 5px;color: #999;display: flex;flex-direction: row;align-items: center;justify-content: center;font-size: 13px;}
.search-btn image{width: 12px;height: 12px;margin-left: 2px;}
.content-search-btn{width: 100%;display: flex;flex-direction: row;align-items: center;font-size: 14px;justify-content: flex-end !important;padding: 0 15px;box-sizing: border-box;padding-bottom: 10px;box-shadow:1px 1px 8px rgb(240, 240, 240);}
.search-btn-date{border: 1px solid #ebebeb;padding: 3px 10px;margin-left: 10px;margin-top: 10px;border-radius: 4px;color: #333;font-size: 14px;background-color:#f5f5f5;color: #333;}

.content-list{width: 100%;margin-top: 10px;display: flex;flex-direction: column;align-items: center;margin-top: 20px;}
.content-item{width: 90%;display: flex;flex-direction: column;border: 1px solid #eee;border-radius: 4px;box-sizing: border-box;font-size: 13px;line-height: 25px;color: #333;padding: 10px;box-shadow:2px 2px 5px rgb(177, 177, 177);margin: auto;margin-bottom: 15px;}
.content-item-li{display: flex;flex-direction: row;align-items: center;}
.content-item-li text{overflow: hidden;white-space: nowrap;text-overflow: ellipsis;width: calc(100% - 30px);}
.content-item-li .shop-icon{width: 20px;height: 20px;margin-right: 5px;}
.content-item-li .address-icon{width: 20px;height: 20px;margin-right: 5px;}
.content-item-li-right{display: flex;flex-direction: row;align-items: center;line-height: 25px;}
.content-item-li-right view{margin-left: 20px;color: dodgerblue;}
.content-item-li-date{font-size: 10px;color: #999;display: flex;flex-direction: row;align-items: center;justify-content: flex-end;}