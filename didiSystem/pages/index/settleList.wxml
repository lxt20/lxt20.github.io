<!--pages/index/settleList.wxml-->
<view class="content-box">
  <view wx:if="{{isDirect==1}}">
    <view class="content-cusName">
      {{name}}
    </view>
    <view class="content-list">
      <checkbox-group bindchange="getCheck">
        <view class="content-item" wx:for="{{orderList}}" wx:key="index">
          <view class="content-check">
            <checkbox value="{{item.orderid}}" checked="{{item.checked}}" ></checkbox>
          </view>
          <view class="content-detail">
            <view class="content-detail-li">销售单号:{{item.orderid}}</view>
            <view class="content-detail-li">出库日期：{{item.orderdate}}</view>
            <view class="content-detail-li">
              <text>应收金额：{{item.ysMoney}}</text>
              <view class="ml-box">抹零：<input type="text" value="{{item.ml}}" data-index="{{index}}" bindinput="mlInput" bindblur="mlblur" /> 元</view>
            </view>
            <view class="content-detail-li" style="justify-content: flex-start">本次收款：
              <input class="ssbox" type="text" value="{{item.ssMoney}}" data-index="{{index}}"  bindinput="ssInput" bindblur="ssblur" /> 元
              <button size="mini" class="updateBtn" data-index="{{index}}" bindtap="confirmSS">确认修改</button>
            </view>

          </view>
        </view>
      </checkbox-group>
    </view>

    <view style="width:100%;height:50px;"></view>
    <view class="bottom-box">
      <view class="bottom-view btn1" bindtap="allSelectBtn">全选</view>
      <view class="bottom-view btn3" bindtap="giveupBtn">
        放弃结算
      </view>
      <view class="bottom-view btn2" bindtap="gotoPay" data-num="{{totalNum}}">确认收款
        <view class="btn2-money" wx:if="{{totalNum!=0}}">￥{{totalNum}}</view>
      </view>
    </view>
  </view>
  <view wx:if="{{isDirect==2}}">
    
    <view class="content-list">
      <checkbox-group bindchange="getCheck">
        <view class="content-item" wx:for="{{orderList}}" wx:key="index">
          <view class="content-check">
            <checkbox value="{{item.orderid}}" checked="{{item.checked}}" ></checkbox>
          </view>
          <view class="content-detail">
            <view class="content-detail-li">销售单号:{{item.orderid}}</view>
            <view class="content-detail-li">出库日期：{{item.orderdate}}</view>
            <!-- <view class="content-detail-li"><text>应收金额：{{item.ysMoney}}元</text><text>抹零：<input type="text" value="{{item.ml}}" /> 元</text></view>
            <view class="content-detail-li">本次收款：{{item.ssMoney}}元</view> -->
            <view class="content-detail-li">
              <text>应收金额：{{item.ysMoney}}</text>
              <view class="ml-box">抹零：<input type="text" value="{{item.ml}}" data-index="{{index}}" bindinput="mlInput" bindblur="mlblur" /> 元</view>
            </view>
            <view class="content-detail-li" style="justify-content: flex-start">本次收款：
              <input class="ssbox" type="text" value="{{item.ssMoney}}" data-index="{{index}}"  bindinput="ssInput" bindblur="ssblur" /> 元
              <button size="mini" class="updateBtn">确认修改</button>
            </view>
          </view>
        </view>
      </checkbox-group>
    </view>

    <view style="width:100%;height:50px;"></view>
    <view class="bottom-box">
      <view class="bottom-view btn1" bindtap="allSelectBtn">全选</view>
      <view class="bottom-view btn3" bindtap="giveupBtn">
        放弃结算
      </view>
      <view class="bottom-view btn2" bindtap="gotoPay" data-num="{{totalNum}}">确认收款
        <view class="btn2-money" wx:if="{{totalNum!=0}}">￥{{totalNum}}</view>
      </view>
    </view>
  </view>
</view>
