.content-box{width: 100%;display: flex;flex-direction: column;}
.content-cusName{font-size: 14px;width: 100%;margin-top: 5px;padding: 15px;color: #333;}
.content-search{display: flex;flex-direction: row;align-items: center;padding:0 15px;box-sizing: border-box;font-size: 15px;color: #333;}
.content-search picker{margin-left: 5px;font-size: 14px;margin-right: 5px;color: #333;border: 1px solid #eee;border-radius: 4px;width: 110px;text-align: center;}
.search-btn{border-radius: 4px;border: 1px solid #999;padding: 3px 5px;color: #999;display: flex;flex-direction: row;align-items: center;justify-content: center;font-size: 13px;}
.search-btn image{width: 12px;height: 12px;margin-left: 2px;}
.content-search-btn{display: flex;flex-direction: row;align-items: center;font-size: 14px;justify-content: flex-end;padding: 0 15px;box-sizing: border-box;}
.search-btn-date{border: 1px solid #ebebeb;padding: 3px 10px;margin-left: 10px;margin-top: 10px;border-radius: 4px;color: #333;font-size: 14px;background-color:#f5f5f5;color: #333;}
.content-list{width: 100%;display: flex;flex-direction: column;padding: 15px;box-sizing: border-box;}
.content-item{width: 100%;border: 1px solid #dddddd;border-radius: 4px;padding: 15px;box-sizing: border-box;display: flex;flex-direction: row;align-items: center;margin-bottom: 10px;}
.content-check{margin-right: 5px;}
checkbox .wx-checkbox-input {
	width: 34rpx;
	height: 34rpx;
	border-radius: 50%;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #f03304;
  border-color:#f03304;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 20rpx;
  height: 20rpx;  
  line-height: 20rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
.content-detail{display: flex;flex-direction: column;font-size: 13px;color: #333;line-height: 20px;}
.content-detail-li{display: flex;flex-direction: row;align-items: center;justify-content: space-between;}
.bottom-box{position: fixed;z-index: 999;width:100%;height: 50px;background-color: #fff;box-shadow: inset 0px 15px 10px -15px rgb(233, 233, 233);bottom: 0;right: 0;display: flex;flex-direction: row;align-items: center;justify-content: flex-end;}
.bottom-view{font-style: 13px;font-weight: normal;padding: 5px 20px;margin-right: 5px;border-radius: 8px;}
.btn1{background-color: #28abaf;color: #fff;}
.btn2{background-color: #28abaf;color: #fff;position: relative;}
.btn2-money{position: absolute;background-color: #f00;color: #fff;z-index: 1000;top: -13px;right: 0;font-size: 11px;padding: 1px 3px;border-radius: 8px;}